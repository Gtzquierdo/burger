<div class = "container">
    <div class = "row">
        <div class = "col-md-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}

                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class = "col-md-4">
            <form class = "create-update-form" action = "/" method = "POST">
                <div class = "form-group text-center">
                    <label for = "ca"><h3 Add New Burger:></h3></label>
                    <input type = "text" id = "ca" name= "name">

                <button type="submit" class="btn btn-success" id="addburger"> Add The Burger </button>
                </div>
            </form>
        </div>
        <div class = "col-md-4">
            <h6> Burgers: Devoured</h6>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>